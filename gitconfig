# vim: set ft=config:
[user]
    name = Vladimir Epifanov
    email = voldmar@voldmar.com

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
	pager = less

[alias]
    co = checkout
    br = branch
    st = status --ignore-submodules
    w = whatchanged
    ci = commit
    ch = cherry -v
    last = log -1
    mine = log --author=voldmar --no-merges 
    up = merge @{u}
    lb = "!git reflog | grep -o -E 'moving from [0-9a-z_/-]+ to [0-9a-z/_-]+' | grep -o -E 'f/[0-9a-z_-]+' | awk '{ if ( !counter[$1]  ) { counter[$1]++; print $1} }' | head -10"
    ed = !vim $(git diff --name-only --diff-filter=AM origin/master)
    switch = !legit switch \"$@\"
    branches = !legit branches
    sprout = !legit sprout \"$@\"
    unpublish = !legit unpublish \"$@\"
    harvest = !legit harvest \"$@\"
    sync = !legit sync \"$@\"
    publish = !legit publish \"$@\"
    graft = !legit graft \"$@\"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    d = diff
    s = diff --stat
    sm = diff --stat origin/master

[merge]
    conflictstyle = diff3
    tool = fugitive
[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[push]
    default = current
[github]
    user = voldmar
[branch]
    autosetupmerge = true
